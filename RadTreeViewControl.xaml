<UserControl
    x:Class="RadTreeView.RadTreeViewControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RadTreeView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="4"
    MouseLeftButtonDown="PART_RootGrid_MouseLeftButtonDown"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:ColumnViewModel}">
            <Grid Cursor="Hand" Tag="{Binding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2" />
                </Grid.ColumnDefinitions>

                <Border
                    Grid.Column="0"
                    Padding="2"
                    Background="Transparent"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                    <Border BorderBrush="LightGray" BorderThickness="1">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            FontWeight="Medium"
                            Text="{Binding Title}" />
                    </Border>
                </Border>
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type local:RowViewModel}">
            <Border
                Background="Transparent"
                DataContext="{Binding}"
                Loaded="Border_Loaded" />
        </DataTemplate>

    </UserControl.Resources>


    <Border
        x:Name="MainBorder"
        Margin="2"
        Padding="1"
        BorderBrush="LightGray"
        Background="Transparent"
        BorderThickness="2">
        <ScrollViewer
            HorizontalScrollBarVisibility="Auto"
            PanningMode="None"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid
                    x:Name="PART_RootGrid"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Loaded="PART_RootGrid_Loaded"
                    SnapsToDevicePixels="True" />
                <Border
                    x:Name="Counter"
                    Grid.Row="1"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                    <Border
                        Width="200"
                        MaxWidth="200"
                        HorizontalAlignment="Left"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,1,0">
                        <DockPanel>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="15"
                                FontWeight="Medium"
                                Text="Кол-во элементов:" />
                            <TextBlock
                                Margin="2,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="15"
                                FontWeight="Medium"
                                Text="{Binding ViewModel.Count}" />
                        </DockPanel>
                    </Border>
                </Border>
            </Grid>
        </ScrollViewer>
    </Border>

</UserControl>
